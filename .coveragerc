[html]
show_contexts = true
skip_covered = false

[paths]
_site-packages-to-src-mapping =
  .
  */lib/pypy*/site-packages
  */lib/python*/site-packages
  *\Lib\site-packages

[report]
# `fail_under` is set here temporarily until it can be dropped:
fail_under = 94
skip_covered = true
skip_empty = true
show_missing = true
exclude_also =
  ^\s*@pytest\.mark\.xfail

[run]
branch = true
cover_pylib = false
parallel = true
relative_files = true
source =
  .
source_pkgs =
  aiosignal
